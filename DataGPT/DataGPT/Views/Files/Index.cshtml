@{
    ViewData["Title"] = "";
}
<head>
    <link href="~/css/DataPage/DeleteButton - Copy.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/css/DataPage/DeleteButton.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DataGPT.styles.css" asp-append-version="true" />

    <link href="https://assets-global.website-files.com/65db0d2035e0a0b84b22d750/css/chatgpt-cb8f91.webflow.3886f51e1.css"
          rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">


    
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">

                <a href="https://localhost:7124/Home/HomePage"><img src="~/assets/img/Text logo .png" alt="DataGPT logo" class="img-fluid"></a>

                <!-- title
                <h1 class="text-light" style="margin-left: 5px;"><a href="index.html"><span>DataGPT</span></a></h1>  -->

            </div>


            <nav id="navbar" class="navbar">


                <!--change the "getstarted scrollto" and make a new one that is specified to login (keep the syle and redirect it to the sign in page)-->
                @if (User.Identity.IsAuthenticated)
                {
                    <ul>
                        <li><a class="nav-link" href="https://localhost:7124/Home/HomePage" ">Home</a></li>
                        <li><a class="nav-link" href="https://localhost:7124/Home/ChatGPTPage">Clean Datasets </a></li>
                        <li><a class="nav-link" href="https://localhost:7124/Files">My Datasets</a></li>

                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle arrow-none" href="" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Account <i class="mdi mdi-chevron-down ms-1"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" asp-controller="Account" asp-action="UserProfile">Profile</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>

                            </div>
                        </div>

                        <li><a class="getstarted scrollto" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    </ul>
                }
                else
                {

                }
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->

    <div style="margin-left:1%; margin-right:1%; margin-top:5%;" class="row justify-content-center">
        <div class="col-xl-12">
           

            <div class="card">
                <div class="card-body">
                    <div style="margin-left:10%; display: flex; align-items: center;">
                        <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <button class="cssbuttons-io-button" style="margin-right: 10px;">
                            <svg viewBox="0 0 640 512" fill="white" height="1em" xmlns="http://www.w3.org/2000/svg">
                                <path d="M144 480C64.5 480 0 415.5 0 336c0-62.8 40.2-116.2 96.2-135.9c-.1-2.7-.2-5.4-.2-8.1c0-88.4 71.6-160 160-160c59.3 0 111 32.2 138.7 80.2C409.9 102 428.3 96 448 96c53 0 96 43 96 96c0 12.2-2.3 23.8-6.4 34.6C596 238.4 640 290.1 640 352c0 70.7-57.3 128-128 128H144zm79-217c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l39-39V392c0 13.3 10.7 24 24 24s24-10.7 24-24V257.9l39 39c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-80-80c-9.4-9.4-24.6-9.4-33.9 0l-80 80z"></path>
                            </svg>
                            
                                <div>
                                    
                                    <input type="file" id="file" name="file" />
                                    
                                    
                                </div>
                            
                            
                        </button>
                            <button class="cssbuttons-io-button" style=" margin-right: 10px;">
                                <svg viewBox="0 0 640 512" fill="white" height="1em" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M144 480C64.5 480 0 415.5 0 336c0-62.8 40.2-116.2 96.2-135.9c-.1-2.7-.2-5.4-.2-8.1c0-88.4 71.6-160 160-160c59.3 0 111 32.2 138.7 80.2C409.9 102 428.3 96 448 96c53 0 96 43 96 96c0 12.2-2.3 23.8-6.4 34.6C596 238.4 640 290.1 640 352c0 70.7-57.3 128-128 128H144zm79-217c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l39-39V392c0 13.3 10.7 24 24 24s24-10.7 24-24V257.9l39 39c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-80-80c-9.4-9.4-24.6-9.4-33.9 0l-80 80z"></path>
                                </svg>

                                <div>

                                    <span type="submit">Upload</span>


                                </div>


                            </button>
                        </form>
                        <input class="search-input w-input" maxlength="256" name="query" type="text" id="myInput" onkeyup="myFunction()" required="" />
                    </div>

                    <div class="table-responsive">
                    </div>
                </div>

                

               

                    


                
                <div class="row my-3">
                    @foreach (var file in Model)
                    {
                        <div style="margin-left:1%;margin-right:1%;" class="col-xl-3 col-md-6">
                            <div class="card card-pricing">
                                <div class="card-body text-center">
                                    <p class="card-pricing-plan-name fw-bold text-uppercase">@file.FileName</p>
                                    @if (@file.FileName.EndsWith("csv", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <img style="height: 50px;width: 50px;" src="~/img/DataPage/csv (2).png" alt="">
                                    }
                                    else
                                    {
                                        <img style="height: 50px;width: 50px;" src="~/img/DataPage/xlsx.png" alt="">
                                    }
                                    <span class="card-pricing-icon text-primary">
                                        <i class="fe-at-sign"></i>
                                    </span>

                                    <div class="d-grid">
                                        <a asp-action="Download" asp-route-fileName="@file.FileName" class="btn btn-primary waves-effect waves-light mt-4" style="background-color: #293A54;">
                                            Download
                                        </a>
                                        <form asp-action="Delete" method="post" style="display:inline;">
                                            <input type="hidden" name="fileName" value="@file.FileName" />
                                            <button type="submit" style="margin-left:40%;margin-top:10px" class="BtnGPT">
                                                <div class="signGPT">
                                                    <svg viewBox="0 0 16 16"
                                                         class="bi bi-trash3-fill"
                                                         fill="currentColor"
                                                         height="18"
                                                         width="18"
                                                         xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"></path>
                                                    </svg>
                                                </div>
                                                <div class="textGPT">Delete</div>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
               
                    
                
                    
                        


                    

                    <!-- end row -->
                   
                

            </div>


        </div> <!-- end col-->

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


   
</body>

